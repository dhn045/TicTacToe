<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:columnCount="3"
            app:rowCount="3"
            app:useDefaultMargins="true">

            <ImageView
                android:id="@+id/imageViewCell0"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorCellBackground"
                android:onClick="play"
                app:layout_column="0"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/imageViewCell1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorCellBackground"
                android:onClick="play"
                app:layout_column="1"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/imageViewCell2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorCellBackground"
                android:onClick="play"
                app:layout_column="2"
                app:layout_row="0" />

            <ImageView
                android:id="@+id/imageViewCell3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorCellBackground"
                android:onClick="play"
                app:layout_column="0"
                app:layout_row="1" />

            <ImageView
                android:id="@+id/imageViewCell4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorCellBackground"
                android:onClick="play"
                app:layout_column="1"
                app:layout_row="1" />

            <ImageView
                android:id="@+id/imageViewCell5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorCellBackground"
                android:onClick="play"
                app:layout_column="2"
                app:layout_row="1" />

            <ImageView
                android:id="@+id/imageViewCell6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorCellBackground"
                android:onClick="play"
                app:layout_column="0"
                app:layout_row="2" />

            <ImageView
                android:id="@+id/imageViewCell7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorCellBackground"
                android:onClick="play"
                app:layout_column="1"
                app:layout_row="2" />

            <ImageView
                android:id="@+id/imageViewCell8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorCellBackground"
                android:onClick="play"
                app:layout_column="2"
                app:layout_row="2"
                tools:srcCompat="@android:color/darker_gray" />
        </androidx.gridlayout.widget.GridLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="reset"
            android:text="reset" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>